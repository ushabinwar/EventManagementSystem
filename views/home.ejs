<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script> 
</head>
<body class="bg-gray-100 flex flex-col items-center">

  <!-- Navigation Bar -->
  <nav class="bg-indigo-600 w-full p-4 text-white">
    <div class="container mx-auto flex justify-between items-center">
      <h1 class="text-2xl font-bold">Event Management</h1>
      <a href="/create-event" class="bg-indigo-700 px-4 py-2 rounded-lg hover:bg-indigo-800">Create Event</a>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="container mx-auto p-6">
    <h2 class="text-3xl font-bold mb-6 text-center">All Events</h2>

    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Location</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <!-- Example Event Row -->
          <% events.forEach((event) => { %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= event.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= event.date %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= event.location %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <a href="/event-delete/<%= event._id %>" class="text-red-600 hover:text-red-800">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </main>

</body>
</html>
